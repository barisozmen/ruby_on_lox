// Basic class declaration and instantiation
class Bagel {}
var bagel = Bagel();
print bagel;

// Properties
class Person {}
var person = Person();
person.name = "Alice";
person.age = 30;
print person.name;
print person.age;

// Methods
class Calculator {
  add(a, b) {
    return a + b;
  }
}

var calc = Calculator();
print calc.add(3, 5);

// Using 'this'
class Circle {
  area() {
    return 3.14 * this.radius * this.radius;
  }
}

var circle = Circle();
circle.radius = 5;
print circle.area();

// Initializer
class Counter {
  init(start) {
    this.count = start;
  }

  increment() {
    this.count = this.count + 1;
  }
}

var counter = Counter(10);
print counter.count;
counter.increment();
print counter.count;

// Implicit return from initializer
class Thing {
  init() {
    this.value = "something";
    return;
  }
}

var thing = Thing();
print thing.value;
